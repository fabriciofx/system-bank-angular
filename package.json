    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.0",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "ngx-mask": "^20.0.3",
