    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.12.1",
    "jest": "^30.2.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.3"
